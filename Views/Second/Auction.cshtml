@model WebApp.Models.AuctionViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>New Auction</h1>
<a href="/logout">Log Out</a><br><br>
<a href="/index">Home</a><br><br>

<div id="content">

    <form asp-controller="Second" asp-action="Create" method="post" class="form-container">
        
        <div class="form-title">Product Name</div>
        <input asp-for="ProductName" class="form-field"/>
        <span asp-validation-for="ProductName"></span>
        
        <div class="form-title">Description</div>
        <input asp-for="Description" type="text" class="form-field"/>
        <span asp-validation-for="Description"></span>

        <div class="form-title">Starting Bid</div>
        <input asp-for="StartingBid" type="number" value="1" step="1" size="6"/><br>
        <span asp-validation-for="StartingBid"></span>

        <div class="form-title">End Date</div>
        <input asp-for="EndDate" class="form-field"/>
        <span asp-validation-for="EndDate"></span>

        <div class="submit-container"><input type="submit" value="Create Auction" class="submit-button"/></div>
    </form>
</div>